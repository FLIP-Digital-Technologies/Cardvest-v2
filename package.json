{
  "name": "Cardvest",
  "version": "2.1.3",
  "private": true,
  "scripts": {
    "prepare": "run-p assets:*",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint:staged": "pretty-quick --staged && lint:staged",
    "clean:android": "cd android && ./gradlew clean && cd ..",
    "clean:ios": "rm -rf ios/build",
    "clean": "run-p clean:*",
    "assets": "npx react-native link",
    "assets:icons": "rn-toolbox icons",
    "assets:splashscreen": "rn-toolbox splash",
    "env:dev": "node scripts/set-environment.js development",
    "env:stage": "node scripts/set-environment.js staging",
    "env:prod": "node scripts/set-environment.js production",
    "setup:ios": "cd ios && pod install --repo-update && cd ..",
    "_android": "cd android && ./gradlew clean && cd .. && react-native run-android",
    "android:dev": "run-s env:dev _android",
    "android:stage": "run-s env:stage _android",
    "android:prod": "run-s env:prod _android",
    "_ios": "react-native run-ios",
    "ios:dev": "run-s env:dev _ios",
    "ios:stage": "run-s env:stage _ios",
    "ios:prod": "run-s env:prod _ios",
    "android:bundle:create": "rm -rf android/app/build && react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "android:assemble:debug": "cd android && ./gradlew assembleDebug",
    "android:assemble:release": "cd android && ./gradlew assembleRelease",
    "android:bundle:release": "cd android && ./gradlew clean && ./gradlew bundleRelease",
    "release-build": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/build/intermediates/res/merged/release/ && rm -rf android/app/src/main/res/drawable-* && rm -rf android/app/src/main/res/raw/* && android:bundle:release",
    "android:assemble:bundle": "cd android && ./gradlew bundleRelease",
    "ios:bundle:create": "react-native bundle --entry-file index.js --platform ios --dev false --bundle-output ios/main.jsbundle --assets-dest ios",
    "ios:assemble:debug": "xcodebuild -quiet -workspace ios/Cardvest.xcworkspace -scheme Cardvest -configuration Release -sdk iphonesimulator -destination platform='iOS Simulator',OS=13.0,name='iPhone 11 Pro Max' CODE_SIGNING_REQUIRED=NO ONLY_ACTIVE_ARCH=NO",
    "build:dev:android": "run-s env:prod android:bundle:create android:assemble:debug",
    "build:dev:ios": "run-s env:dev setup:ios ios:assemble:debug",
    "build:prod:ios": "run-s env:prod setup:ios ios:bundle:create ios:assemble:debug",
    "pre-commit": "yarn lint:staged && yarn dependencies:checkCircular && yarn dependencies:graph",
    "prettier-check:staged": "prettier --check \"./src/**/*.{js,jsx,ts,tsx}\"",
    "prettier-format:staged": "prettier --write \"./src/**/*.{js,jsx,ts,tsx}\"",
    "dependencies:checkCircular": "madge src/ --circular",
    "dependencies:graph": "madge src/ --circular --image deps-graph.svg",
    "postinstall": "husky instal  && react-native-version",
    "np": "np --no-publish"
  },
  "dependencies": {
    "@jest/create-cache-key-function": "^29.7.0",
    "@react-native-async-storage/async-storage": "^2.0.0",
    "@react-native-clipboard/clipboard": "^1.14.2",
    "@react-native-community/cli": "^14.1.1",
    "@react-native-community/cli-platform-android": "^14.1.1",
    "@react-native-community/cli-platform-ios": "^14.1.1",
    "@react-native-community/push-notification-ios": "^1.11.0",
    "@react-native-firebase/analytics": "^21.0.0",
    "@react-native-firebase/app": "^21.0.0",
    "@react-native-firebase/messaging": "^21.0.0",
    "@react-native-masked-view/masked-view": "^0.3.1",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/drawer": "^6.7.2",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.4.1",
    "@tanstack/react-query": "^4.2.1",
    "axios": "^1.7.7",
    "dayjs": "^1.11.13",
    "i18next": "^23.15.2",
    "mixpanel-react-native": "^3.0.7",
    "native-base": "^3.4.28",
    "react": "18.3.1",
    "react-i18next": "^15.0.2",
    "react-native": "0.75.4",
    "react-native-adjust": "^5.0.2",
    "react-native-adjust-oaid": "^5.0.2",
    "react-native-clarity": "^3.0.4",
    "react-native-device-info": "^13.0.0",
    "react-native-fbsdk-next": "^13.1.3",
    "react-native-fingerprint-scanner": "git+https://github.com/hieuvp/react-native-fingerprint-scanner.git#9cecc0db326471c571553ea85f7c016fee2f803d",
    "react-native-gesture-handler": "^2.20.0",
    "react-native-global-props": "^1.1.5",
    "react-native-gradle-plugin": "^0.71.19",
    "react-native-image-picker": "^7.1.2",
    "react-native-indicators": "^0.17.0",
    "react-native-localize": "^3.2.1",
    "react-native-otp-inputs": "^7.4.0",
    "react-native-pager-view": "^6.4.1",
    "react-native-permissions": "^4.1.5",
    "react-native-push-notification": "^8.1.1",
    "react-native-reanimated": "^3.15.4",
    "react-native-safe-area-context": "^4.11.0",
    "react-native-screens": "^3.34.0",
    "react-native-share": "^11.0.3",
    "react-native-splash-screen": "^3.3.0",
    "react-native-svg": "^15.7.1",
    "react-native-svg-transformer": "^1.5.0",
    "react-native-tab-view": "^3.5.2",
    "react-native-ux-cam": "^6.0.0",
    "react-native-vector-icons": "^10.2.0",
    "react-native-webview": "^13.12.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@forward-software/react-native-toolbox": "^3.0.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@react-native-community/eslint-plugin": "^1.3.0",
    "@react-native/babel-preset": "0.75.4",
    "@react-native/eslint-config": "^0.75.4",
    "@react-native/metro-config": "^0.75.4",
    "@react-native/typescript-config": "0.75.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/lodash": "^4.17.10",
    "@types/node": "^22.7.5",
    "@types/react": "^18.2.6",
    "@types/react-native-global-props": "^1.1.6",
    "@types/react-native-indicators": "^0.16.6",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.6",
    "jest": "^29.6.3",
    "lint-staged": "^15.2.10",
    "madge": "^8.0.0",
    "np": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "react-native-debugger-open": "^0.4.3",
    "react-native-version": "^4.0.0",
    "react-test-renderer": "18.3.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.5",
    "typescript": "5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FLIP-Digital-Technologies/Cardvest-v2.git"
  },
  "jest": {
    "preset": "react-native"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "npm run prettier-format:staged",
      "npm run prettier-check:staged"
    ]
  },
  "madge": {
    "tsConfig": "./tsconfig.json",
    "fileExtensions": "ts",
    "excludeRegExp": [
      ".*\\.test\\.ts$",
      ".*\\.test\\.tsx$"
    ],
    "detectiveOptions": {
      "ts": {
        "skipTypeImports": true
      }
    }
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@3.6.4"
}
